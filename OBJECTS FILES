// CPP
#include "Objects.hpp"

Watermelon::Watermelon()
{
	double z = rand();

	this->getShape().setFillColor(sf::Color::Cyan);
	this->setPoints(1);
	this->getShape().setPosition(sf::Vector2f(z, 1200));
	this->setName("Watermelon");
	
	sf::Texture tex;
	tex.loadFromFile("Images/sprite_Watermelon.png");
	this->getShape().setTexture(&tex);

	
}

Watermelon::Watermelon(sf::Texture newSprite)
{
	double z = rand();

	this->getShape().setFillColor(sf::Color::Cyan);
	this->setPoints(1);
	this->getShape().setPosition(sf::Vector2f(z, 1200));
	this->setName("Watermelon");
	this->getShape().setTexture(&newSprite);

}

void Watermelon::changeSprite()
{
	sf::Texture tex;
	tex.loadFromFile("Images/sprite_WatermelonD1.png");
	this->getShape().setTexture(&tex);
}

