#include "ObjectManager.hpp"

class Watermelon : public ObjectManager
{
public:
	Watermelon();
	Watermelon(sf::Texture newSprite);


private:
	sf::Texture fruitSprite;

};

class Kiwi : public ObjectManager
{
public:
	Kiwi();
	Kiwi(sf::Texture newSprite);
};

class Orange : public ObjectManager
{
public:
	Orange();
	Orange(sf::Texture newSprite);
};

class Apple : public ObjectManager
{
public:
	Apple();
	Apple(sf::Texture newSprite);
};


class Coconut : public ObjectManager
{
public:
	Coconut();
	Coconut(sf::Texture newSprite);
};

class Dragonfruit : public ObjectManager
{
public:
	Dragonfruit();
	Dragonfruit(sf::Texture newSprite);
};

// CPP
#include "Objects.hpp"
#include "Utility.hpp"

Watermelon::Watermelon() : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Magenta);
	this->setName("Watermelon");
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
}

Watermelon::Watermelon(sf::Texture newSprite) : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Magenta);
	this->setName("Watermelon");
	this->setSprite(newSprite);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
}

Kiwi::Kiwi() : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Green);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Kiwi");
}

Kiwi::Kiwi(sf::Texture newSprite) : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Green);
	this->setSprite(newSprite);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Kiwi");
}

Orange::Orange() : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Yellow);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Orange");
}

Orange::Orange(sf::Texture newSprite) : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Yellow);
	this->setSprite(newSprite);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Orange");
}

Apple::Apple() : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Red);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Apple");
}

Apple::Apple(sf::Texture newSprite) : ObjectManager()
{
	double z = rand();

	this->getShape().setFillColor(sf::Color::Red);
	this->setSprite(newSprite);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Apple");
}

Coconut::Coconut() : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::White);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Coconut");
}

Coconut::Coconut(sf::Texture newSprite) : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::White);
	this->setSprite(newSprite);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Coconut");
}

Dragonfruit::Dragonfruit() : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Blue);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Dragonfruit");
}

Dragonfruit::Dragonfruit(sf::Texture newSprite) : ObjectManager()
{
	this->getShape().setFillColor(sf::Color::Blue);
	this->setSprite(newSprite);
	this->getShape().setPosition(sf::Vector2f(rng() % 880 + 100, 980));
	this->setName("Dragonfruit");
}
