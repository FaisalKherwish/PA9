// UTILITES HPP - too small will add more prob
#pragma once

#include <SFML/Graphics.hpp>

int rng(const int range = 1000);

// UTILITY CPP - just an rng for now
#include "Utility.hpp"

#include <ctime>
#include <cstdlib>
#include <random>

int rng(const int range) // cool mersene twister engine rng
{
	std::random_device num;
	std::mt19937 gen(num());

	std::uniform_int_distribution<> distrib(1, range);

	return distrib(gen);
}

